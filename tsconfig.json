{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "paths": { "@/*": ["./src/*"] },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "isolatedModules": true
  },
  "include": ["src/**/*", "**/*.test.ts"],
  "exclude": ["node_modules", "dist"]
}
